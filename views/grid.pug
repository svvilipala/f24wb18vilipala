extends layout

block content
  h1 Grid Display
  p Rows: #{query.rows}, Columns: #{query.cols} 
  
  - let rows = Number(query.rows)
  - let cols = Number(query.cols)
  
  - if (Number.isNaN(rows) || Number.isNaN(cols) || !Number.isInteger(rows) || !Number.isInteger(cols))
    p Rows or Columns is not an integer.
  
  - else if (rows < 3 || rows > 13)
    p Rows count should be between 3 and 13.
  
  - else if (cols < 3 || cols > 13)
    p Columns count should be between 3 and 13.
  
  - else
    - let counter = 0  
    table#outer
      - for (let i = 0; i < rows; i++)
        tr#middle
          - for (let j = 0; j < cols; j++)
            td= counter
            - counter++  
